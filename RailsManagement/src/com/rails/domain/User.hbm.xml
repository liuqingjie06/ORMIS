<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.rails.domain.User" table="users">
		<id name="id" column="id" type="integer">
		<!-- 一般会使用class="native" 会自动选择匹配 -->
			<generator class="identity" />
		</id>
		<property name="email" column="email" type="string" length="50" />
		<property name="password" column="password" type="string" length="50" />
		<property name="nickName" column="nickname" type="string" length="50" />
		<property name="regDate" column="regdate" type="timestamp" update="false"/>
		
		<!-- 映射从User到Role之间多对多关联关系 -->
		<set name="roles" table="user_role_link" lazy="false">
			<key column="userid" />
			<many-to-many class="com.rails.domain.security.Role" column="roleid" />
		</set>
	</class>
</hibernate-mapping>